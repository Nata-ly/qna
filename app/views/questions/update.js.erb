$('.question-errors').html('<%= render "shared/errors", resource: question %>');
<% unless question.errors.present? %>
  $('.question').html("<h1><%= question.title %></h1><p><%= question.body %></p>")
  $('.question').append('<%= j render partial: 'file', collection: question.files %>');
  $('#edit-question').addClass('hidden')
  $('.edit-question-link').show()
<% end %>
